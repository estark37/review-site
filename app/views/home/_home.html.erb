<div class="row">
  <center>
  <div class="span4">
    <h3>Hello, <%= current_user.name %>!</h3>

    <p>
      Click a button to get started.
    </p>
  </div>

  <div class="span4">
    <p>
      <%= link_to "Get your code reviewed", new_snippet_path, :class =>
        "btn btn-primary btn-large" %>
    </p>
  </div>

  <div class="span4">
    <p>
      <a class="btn btn-primary btn-large" href="#">
        Review someone else's code
      </a>
    </p>
  </div>
</center>
</div>

<div class="row">
  <div class="span12 spacer"></div>
</div>

<div class="row">
  <center>


    <div class="span4 offset2">
      <h3>Your code</h3>

      <% if current_user.snippets.empty? %>
      <br />
      <dt>None yet!</dt>
      <% end %>

      <dl class="dl-horizontal">
        <% for c in current_user.snippets %>
        <dt><%= link_to c.title, c %></dt>
        <dd><%= c.description %></dd>
        <% end %>
      </dl>
    </div>

    <div class="span4">
      <h3>Your reviews</h3>

      <% if true %>   
      <br />
      <p>None yet!</p>
      <% end %>

    </div>

  </center>
</div>
